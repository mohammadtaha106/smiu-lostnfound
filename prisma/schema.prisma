generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

// ğŸ‘‡ USER: @db.ObjectId hata diya, sirf String rakha hai
model User {
  id            String    @id @map("_id") 
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  rollNumber    String?   // ğŸ“ Student Roll Number (original format for display)
  normalizedRollNumber String? // ğŸ” Normalized for case-insensitive searches

  
  phone         String?   // ğŸ“ Contact Number
  createdAt     DateTime
  updatedAt     DateTime
  
  sessions      Session[]
  accounts      Account[]
  posts         Post[]    

  @@map("user")
  @@index([normalizedRollNumber]) // Index for faster lookups
}

// ğŸ‘‡ SESSION: yahan bhi IDs plain String hongi
model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String   
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

// ğŸ‘‡ ACCOUNT: yahan bhi same
model Account {
  id                    String    @id @map("_id")
  accountId             String    
  providerId            String    
  userId                String    
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime



  @@map("account")
}

// ğŸ‘‡ VERIFICATION
model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String    
  expiresAt  DateTime  
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// ğŸ‘‡ POST: userId ab plain string lega (User se match krne k liye)
model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId 
  title       String
  description String
  type        String   
  category    String   
  status      String   @default("OPEN")
  imageUrl    String?  
  time        String?
  studentName String?  
  rollNumber  String?  
  normalizedRollNumber String? // ğŸ” Normalized for searching
  aiTags      String[] 
  location    String
  email       String?  
  phone       String?  // ğŸ“ Contact Number for this post
  date        String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ğŸ‘‡ Relation Fix: userId se @db.ObjectId hatana lazmi hai
  userId      String?   
  user        User?     @relation(fields: [userId], references: [id])
}